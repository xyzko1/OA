<?xml version="1.0" encoding="utf-8" ?>

  <hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NhDemo" namespace="NhDemo">

    <class name="stuinfo" table="stuinfo" lazy="false" >
      <id name="No" column="No" type="int"  >
        <generator class="assigned" />
      </id>

      <property name="Name" type="string" >
        <column name="Name" length="4"   />
      </property>

      <property name="Native"  type="string" >
        <column name="Native" length="10"   />
      </property>

      <property name="Gender"  type="string" >
        <column name="Gender" length="50"  />
      </property>

      <property name="Age"  type="int">
        <column name="Age"   />
      </property>

      
    </class>
  </hibernate-mapping>

